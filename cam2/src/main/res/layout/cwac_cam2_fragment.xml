<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

  <FrameLayout
      android:id="@+id/cwac_cam2_preview_stack"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <com.commonsware.cwac.cam2.CameraView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.commonsware.cwac.cam2.RuleOfThirdsOverlay
      android:id="@+id/rule_of_thirds"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone" />
  </FrameLayout>

  <ProgressBar
      android:id="@+id/cwac_cam2_progress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:visibility="visible" />


  <android.support.v7.widget.AppCompatImageView
      android:id="@+id/cwac_cam2_switch_camera_btn"
      android:layout_width="50dp"
      android:layout_height="50dp"
      app:srcCompat="@drawable/ic_switch_camera_vector"/>

  <android.support.v7.widget.AppCompatImageView
      android:id="@+id/cwac_cam2_flash_btn"
      android:layout_width="50dp"
      android:layout_height="50dp"
      app:srcCompat="@drawable/ic_flash_on_vector"/>

  <!--<com.github.clans.fab.FloatingActionButton-->

      <!--android:layout_width="wrap_content"-->
      <!--android:layout_height="wrap_content"-->
      <!--android:src="@drawable/modified_camera_switch_custom_96"-->
      <!--fab:fab_colorNormal="@color/cwac_cam2_secondary_fab"-->
      <!--fab:fab_colorPressed="@color/cwac_cam2_secondary_fab_pressed"-->
      <!--/>-->


  <Chronometer
      android:id="@+id/chrono"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true"
      android:layout_marginEnd="@dimen/cwac_cam2_fragment_chrono_margin"
      android:layout_marginRight="@dimen/cwac_cam2_fragment_chrono_margin"
      android:layout_marginTop="@dimen/cwac_cam2_fragment_chrono_margin"
      android:background="@color/cwac_cam2_chrono_background"
      android:padding="4dp"
      tools:visibility="visible"
      android:visibility="gone" />

  <com.commonsware.cwac.cam2.ReverseChronometer
      android:id="@+id/rchrono"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true"
      android:layout_marginEnd="@dimen/cwac_cam2_fragment_chrono_margin"
      android:layout_marginRight="@dimen/cwac_cam2_fragment_chrono_margin"
      android:layout_marginTop="@dimen/cwac_cam2_fragment_chrono_margin"
      android:background="@color/cwac_cam2_chrono_background"
      android:padding="4dp"
      android:visibility="gone" />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true">

    <ImageView
        android:id="@+id/cwac_cam2_picture_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/camera_pic_effect"
        android:clickable="true"/>

    <!--&lt;!&ndash; Currently there is spacing of 8 dp to each side between icon and button&ndash;&gt;-->
    <!--<com.github.clans.fab.FloatingActionButton-->
        <!--android:id="@+id/cwac_cam2_picture_btn"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:src="@drawable/modified_camera_80"-->
        <!--fab:fab_shadowRadius="16dp"-->
        <!--fab:fab_colorNormal="@color/cwac_cam2_picture_fab"-->
        <!--fab:fab_colorPressed="@color/cwac_cam2_picture_fab_pressed" />-->

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/cwac_cam2_video_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/modified_videocam_80"
        fab:fab_shadowRadius="16dp"
        fab:fab_colorNormal="@color/cwac_cam2_video_fab"
        fab:fab_colorPressed="@color/cwac_cam2_video_fab_pressed" />

    <ImageButton
        android:id="@+id/cwac_cam2_gallery_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/modified_gallery_96" />


    <SeekBar
        android:id="@+id/cwac_cam2_zoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@id/cwac_cam2_picture_btn"
        android:layout_toStartOf="@id/cwac_cam2_picture_btn"
        android:max="100"
        android:visibility="gone" />

  </RelativeLayout>
</RelativeLayout>